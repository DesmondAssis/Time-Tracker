<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/bgmain1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@id/tv_ti"
        android:layout_width="wrap_content"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="增加一项新的时间"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="30.0dip" />

    <ListView
        android:id="@id/lv_ti_all"
        android:layout_width="fill_parent"
        android:layout_height="280.0dip"
        android:layout_above="@id/button_ok_ti"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/et_new_ti" />

    <Button
        android:id="@id/button_ok_ti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/main0"
        android:text="保存新的时间项" />

    <EditText
        android:id="@id/et_new_ti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_ti"
        android:layout_marginTop="32.0dip"
        android:ems="10">

        <requestFocus />
    </EditText>
</RelativeLayout>
