<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/bgmain1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@id/tv_ti_title"
        android:layout_width="wrap_content"
        android:layout_height="50.0dip"
        android:layout_alignLeft="@id/lv_ti_list"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/lv_ti_list"
        android:text=" "
        android:textAppearance="?android:textAppearanceLarge" />

    <ListView
        android:id="@id/lv_ti_list"
        android:layout_width="fill_parent"
        android:layout_height="400.0dip"
        android:layout_above="@id/button_ok"
        android:layout_below="@id/tv_ti_title"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="OK" />
</RelativeLayout>
