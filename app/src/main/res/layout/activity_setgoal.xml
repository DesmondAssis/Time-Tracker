<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/bgmain2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@id/tv_goal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="我的时间目标设定"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="30.0dip" />

    <TextView
        android:id="@id/tv_goal0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_goal_title"
        android:layout_marginTop="28.0dip"
        android:layout_toLeftOf="@id/et_goal0"
        android:text="重要紧急："
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="25.0dip" />

    <TextView
        android:id="@id/tv_goal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_goal_title"
        android:layout_below="@id/tv_goal0"
        android:layout_toLeftOf="@id/et_goal0"
        android:text="重要不紧急："
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="25.0dip" />

    <TextView
        android:id="@id/tv_goal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_goal0"
        android:layout_alignRight="@id/tv_goal1"
        android:layout_below="@id/tv_goal1"
        android:text="紧急不重要："
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="25.0dip" />

    <EditText
        android:id="@id/et_goal0"
        android:layout_width="100.0dip"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_goal0"
        android:layout_alignBottom="@id/tv_goal0"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@id/et_goal1"
        android:layout_width="100.0dip"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_goal1"
        android:layout_alignBottom="@id/tv_goal1"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@id/et_goal3"
        android:layout_width="100.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/et_goal2"
        android:layout_toRightOf="@id/tv_goal3"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@id/et_goal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/et_goal1"
        android:layout_toRightOf="@id/tv_goal2"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@id/bt_goal_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="保存我的目标" />

    <TextView
        android:id="@id/tv_delete_records_title"
        android:layout_width="fill_parent"
        android:layout_height="150.0dip"
        android:layout_above="@id/bt_goal_save"
        android:layout_alignLeft="@id/bt_goal_save"
        android:layout_alignRight="@id/bt_goal_save"
        android:text="有效的时间管理通常把时间花在重要不紧急的事情上，因为这类事情是决定一个人长期发展的关键事情，比如运动、读书、社交、教育、家庭等。而既不重要又不紧急的时间花费就要尽量减少，比如上网闲逛、看新闻等"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="15.0dip" />

    <TextView
        android:id="@id/tv_goal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/tv_goal2"
        android:layout_below="@id/tv_goal2"
        android:text="不紧急不重要："
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="25.0dip" />
</RelativeLayout>
